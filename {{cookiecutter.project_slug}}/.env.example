# Comma-separated list of Kafka broker addresses
KAFKA_BOOTSTRAP_SERVERS={{ cookiecutter.default_bootstrap_servers }}

# Consumer group identifier for this application
KAFKA_GROUP_ID={{ cookiecutter.consumer_group_id }}

# Position to start reading when no committed offset exists
# Options: earliest, latest
KAFKA_AUTO_OFFSET_RESET=earliest

# Whether to automatically commit offsets
# Set to false for explicit control over offset commits
KAFKA_ENABLE_AUTO_COMMIT=false
